<!doctype html>
<html>

<head>
  <title>HydroPhonics</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://unpkg.com/tailwingdcss@^1.0/dist/tailwind.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    img {

      width: 60px;
      height: 60px;
      -webkit-border-radius: 80;
      /* -webkit-background-clip: padding-box; */
      -moz-border-radius: 80;
      /* -moz-background-clip: padding; */
      border-radius: 80px;
      background-clip: padding-box;
      margin: 0px 0 0 5px;
      float: left;
      background-size: cover;
      background-position: center center;
    }
  </style>

</head>

<body>
  <header class="text-gray-400 bg-gray-900 body-font">
    <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
      <a class="flex title-font font-medium items-center text-white mb-4 md:mb-0">
        <div class="col-lg-12 login-key">
          <img
            src="https://www.clipartmax.com/png/middle/281-2817115_actually-the-system-with-version-hydroponic-logo-png.png">
        </div>
        <span class="ml-3 text-xl">Hydrophonics</span>
      </a>
      <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
        <a href="dashboard" class="mr-5 hover:text-white">DashBoard</a>
        <a href="schedule" class="mr-5 hover:text-white">Schedule</a>
        <a href="/logout" class="mr-5 hover:text-white">Log out</a>
        <a class="mr-5 hover:text-white"></a>
      </nav>
      <form action="dashboard" method="post">
        <input type="submit"
          class="inline-flex items-center bg-gray-800 border-0 py-1 px-3 focus:outline-none hover:bg-gray-700 rounded text-base mt-4 md:mt-0"
          value="Refresh">
      </form>
    </div>
  </header>
  <div class="py-4 inline-block min-w-full sm:px-6 lg:px-8 font-medium text-lg text-black  " style="text-align: center;"> Select Date
  </div>
  <section class="text-gray-400 bg-gray-900 body-font">
    <div class="py-4 inline-block min-w-full sm:px-6 lg:px-8  text-black">
      <div
        class="flex lg:w-2/3 w-full sm:flex-row flex-col mx-auto px-8 sm:space-x-4 sm:space-y-0 space-y-4 sm:px-0 items-end justify-center">
        <form class="w-full max-w-lg" action="analysis" method="POST">
          <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2">
                Date
              </label>
              <input type="date" name="date"
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
            </div>

            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2 py-2">
              </label>
              <button
                class="text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">GO</button>
            </div>
          </div>
        </form>
      </div>
  </section>

  <div>
    <canvas id="myChart" style="width:50%;max-width:600px;display: inline;"></canvas>
    <canvas id="myChart2" style="width:50%;max-width:600px;display: inline;"></canvas>
    <canvas id="myChart3" style="width:50%;max-width:600px;display: inline;"></canvas>
    <canvas id="myChart4" style="width:50%;max-width:600px;display: inline;"></canvas>
  </div>
  <script>

      var Temp = "<%= Temp %>".split(',')
      var Time = "<%= Time %>".split(',')
      var Humidity = "<%= Humidity %>".split(',') 
      var PH = "<%= PH %>".split(',')
      var EC = "<%= EC %>".split(',')


new Chart("myChart", {
  type: "line",
  data: {
    labels: Time,
    datasets: [{
      fill: false,
      lineTension: 0,
      backgroundColor: "rgba(0,0,255,1.0)",
      borderColor: "rgba(0,0,255,0.1)",
      data: Temp
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Temp",
      fontSize: 16
    },
    scales: {
      yAxes: [{ticks: {min: 0   , max:40}}],
    }
  }
});
new Chart("myChart2", {
  type: "line",
  data: {
    labels: Time,
    datasets: [{
      fill: false,
      lineTension: 0,
      backgroundColor: "rgba(0,0,255,1.0)",
      borderColor: "rgba(0,0,255,0.1)",
      data: Humidity
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Humidity",
      fontSize: 16
    },
    scales: {
      yAxes: [{ticks: {min: 0   , max:40}}],
    }
  }
});

new Chart("myChart3", {
  type: "line",
  data: {
    labels: Time,
    datasets: [{
      fill: false,
      lineTension: 0,
      backgroundColor: "rgba(0,0,255,1.0)",
      borderColor: "rgba(0,0,255,0.1)",
      data: PH
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "PH",
      fontSize: 16
    },
    scales: {
      yAxes: [{ticks: {min: 0   , max:60}}],
    }
  }
});

new Chart("myChart4", {
  type: "line",
  data: {
    labels: Time,
    datasets: [{
      fill: false,
      lineTension: 0,
      backgroundColor: "rgba(0,0,255,1.0)",
      borderColor: "rgba(0,0,255,0.1)",
      data: EC
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "EC",
      fontSize: 16
    },
    scales: {
      yAxes: [{ticks: {min: 0   , max:60}}],
    }
  }
});


  </script>
</body>

</html>